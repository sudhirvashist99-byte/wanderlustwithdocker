# Use stable Node LTS
FROM node:20

# Set working directory
WORKDIR /app

# Copy only dependency files first (better caching)
COPY package*.json ./

# Install dependencies safely (without running lifecycle scripts like "prepare")
RUN npm ci --ignore-scripts || npm install --ignore-scripts

# Copy the rest of your app
COPY . .

# Optional: copy sample environment file if needed
COPY .env.sample .env

# Expose the app port
EXPOSE 5173

# Start your app
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

